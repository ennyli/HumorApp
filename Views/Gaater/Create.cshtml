@model HumorApp.Models.Gaate

@{
    ViewData["Title"] = "Lage";
}

<h1>Lag Ny Gåte</h1>

<h4>Gåte</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GaateSporsmal" class="control-label"></label>
                <input asp-for="GaateSporsmal" class="form-control" />
                <span asp-validation-for="GaateSporsmal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GaateSvar" class="control-label"></label>
                <input asp-for="GaateSvar" class="form-control" />
                <span asp-validation-for="GaateSvar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kategori" class="control-label"></label>
                <input asp-for="Kategori" class="form-control" />
                <span asp-validation-for="Kategori" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tilbake til listen</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
