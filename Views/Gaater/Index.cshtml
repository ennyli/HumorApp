@model IEnumerable<HumorApp.Models.Gaate>

@{
    ViewData["Title"] = "Gaate";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Lag ny gåte</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GaateSporsmal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategori)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GaateSporsmal)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.Kategori)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Rediger</a> |
