@model IEnumerable<HumorApp.Models.Vits>

@{
    ViewData["Title"] = "Vits";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Lag ny vits</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Vits
            </th>
            <th>
                Kategori
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vitsen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategori)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Rediger</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Slett</a>
            </td>
        </tr>
}
    </tbody>
</table>
